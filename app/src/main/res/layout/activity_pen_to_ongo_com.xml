<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PenToOngoCom">

    <TextView
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="22dp"
        android:layout_marginTop="174dp"
        android:text="Worker's name:"
        android:textColor="#070003"
        android:textSize="30dp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="250dp"
        android:text="Worker's contact:"
        android:textColor="#070003"
        android:textSize="30dp" />

    <EditText
        android:layout_width="144dp"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:id="@+id/workername"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="240dp"
        android:layout_marginTop="173dp" />

    <EditText
        android:layout_width="144dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="253dp"
        android:inputType="number"
        android:id="@+id/workercontact"
        android:layout_marginTop="250dp" />

    <Button
        android:id="@+id/btnPenToOngo"
        android:layout_width="219dp"
        android:layout_height="75dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="111dp"
        android:layout_marginTop="378dp"
        android:background="@drawable/addimagebutton"
        android:text="Change this complain's status to ongoing"
        android:textAllCaps="false"
        android:textSize="20dp" />

    <ImageButton
        android:id="@+id/btnbackPenToOngo"
        android:layout_width="77dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="6dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/outline_arrow_back_black_18dp" />

</RelativeLayout>